<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="540" d:DesignHeight="450"
			 Width="540"
			 Height="450"
             x:Class="mrKrrabs.Views.FormView">
	<StackPanel Margin="30">
		<Button>Pilih file ...</Button>
		<TextBlock Margin="2,5,0,30">No file selected</TextBlock>

		<TextBlock FontSize="20" FontWeight="Medium">Algoritma</TextBlock>
		<RadioButton
			IsChecked="True"
			GroupName="Algorithm"
			Content="Depth First Search (DFS)"
								/>
		<RadioButton
			IsChecked="False"
			GroupName="Algorithm"
			Content="Breadth First Search (BFS)"
								/>

		<TextBlock Margin="0,30,0,0" FontSize="20" FontWeight="Medium">Opsi tambahan</TextBlock>
		<CheckBox Content="Gunakan solusi Travelling Salesman Problem"/>
		<Button Margin="0,30,0,0" HorizontalAlignment="Center">
			Mulai
		</Button>
	</StackPanel>
</UserControl>
